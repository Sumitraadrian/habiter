<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C23"
    tools:context=".LoginActiviity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_hero"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/ic_close"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="New Habit"
            android:textColor="#a2a285"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2D2D33"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp">


            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:justifyContent="space_around">

                <CheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button"
                    android:backgroundTint="@color/gray"
                    android:ems="10"
                    android:paddingVertical="8dp"
                    android:text="One Time Task"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <CheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button"
                    android:backgroundTint="@color/gray"
                    android:ems="10"
                    android:paddingVertical="8dp"
                    android:text="Regular Task"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2D2D33"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="4dp"
                android:text="Name of Habit"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="8dp"
                android:background="@drawable/bg_input"
                android:inputType="text"

                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <include
            layout="@layout/regular_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2D2D33"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="4dp"
                android:text="Custom Color"
                android:textColor="@color/white" />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:justifyContent="space_around">

                <CheckedTextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#2196F3" />

                <CheckedTextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#4CAF50" />

                <CheckedTextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#FFEB3B" />

                <CheckedTextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#FF5722" />

                <CheckedTextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#E91E63" />

                <CheckedTextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#673AB7" />
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2D2D33"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_button"
                android:backgroundTint="#FF7966"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>